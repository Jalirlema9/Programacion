#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

int serie(int n);
void main()
{
int n,x;
cout<<"ingresar el valor maximo de la serie:";
cin>>x;
n=serie(x);
cout<<"la sumatoria es:"<<n<<endl;
getch();
}
int serie(int n){
	int s=0;
	for (int i=1;i<=n;i++){
		s=s+i;
	}return s;
}
